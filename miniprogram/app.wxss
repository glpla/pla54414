@import '/style/iconfont.wxss';

page, view, navitator, video, swiper, swiper-item, scroll-view, textarea, input {
  box-sizing: border-box;
}

page {
  color: #666;
  background: #f6f6f6;
  font-size: 14px;
  font-family: Arial, "Microsoft Yahei", "Helvetica Neue", Helvetica, sans-serif;
}

.container {
  display: flex;
  padding: 0 15rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

button::after {
  border: none;
}

button {
  border-radius: 0;
}
