  animation-delay: 0.8s;
}

.wave-item:nth-child(9) {
  animation-delay: 0.9s;
}

.wave-item:nth-child(10) {
  animation-delay: 1s;
}

.wave-item:nth-child(11) {
  animation-delay: 1.1s;
}

.wave-item:nth-child(12) {
  animation-delay: 1.2s;
}

.wave-item:nth-child(13) {
