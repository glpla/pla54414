@import '/style/iconfont.wxss';

.nav-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0.8rem;
  padding: 20rpx;
}

.nav-icon {
  font-size: 2.4rem;
  color: #4cb2cb;
  text-shadow: 0 0 4rpx #4cb2cb;  
}

.nav-desc {
  color: #666;
}

