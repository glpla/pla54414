@import '../../../style/iconfont.wxss';

.wrap {
  height: 120rpx;
  background: #69c3aa;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
}

.item {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.cart {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  top: -30rpx;
  padding: 20rpx;
  background: #fff;
  border: 4rpx solid #69c3aa;
  color: #69c3aa;
  border-radius: 50%;
  box-shadow: 0 0 30rpx #ff0;
}

.icon {
  font-size: 2rem;
}

.desc {
  font-size: 0.8rem;
}

.is-has {
  position: absolute;
  top: 0rpx;
  right: 30%;
  color: #ff0;
}

.no-has {
  display: none;
}
