@import '/style/iconfont.wxss';

.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.msg-box {
  padding: 20rpx;
}

.bar {
  background: #ddd;
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 0.8rem;
}

.item-wrap {
  position: relative;
  margin-top: 10rpx;
  /* border-top: 2rpx solid #ddd; */
  box-shadow: 0 10rpx 10rpx #c7c7c7;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10rpx;
}

.item .user-info {
  width: 100rpx;
  height: 100rpx;
  background-color: #aaa;
  background-size: cover;
  border-radius: 50%;
  margin: 20rpx;
}

.item .user-msg {
  margin: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item .user-msg .nick-name {
  font-size: 0.8rem;
}

.item .user-msg .msg {
  margin-top: 10rpx;
  font-size: 0.8rem;
}

.like {
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  display: flex;
  align-items: center;
}

.like view {
  color: #f40;
  font-size: 0.68rem;
}

.like text {
  color: #f40;
  font-size: 1.4rem;
}

.tips {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.tips .time {
  font-size: 0.6rem;
  width: 300rpx;
}

.tips .comment {
  display: flex;
  align-items: center;
}

.comment .options {
  position: relative;
  height: 60rpx;
  margin-right: 20rpx;
  background: #666;
  border-radius: 6rpx;
  color: #fff;
  font-size: 0.6rem;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: all 0.2s linear;
}

.comment .options::after {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: inherit;
  right: -5rpx;
  top: 50%;
  transform: rotate(45deg) translate(-50%, -50%);
}

.comment .options view {
  padding: 0 14rpx;
}

.comment .options.cur {
  opacity: 1;
}

.comment .btn {
  width: 60rpx;
  height: 40rpx;
  background: #ddd;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.comment .btn view {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #999;
  margin: 4rpx;
}

.likes-wrap {
  position: relative;
  color: #333;
  font-size: 0.68rem;
  word-wrap: break-word;
  background: #ddd;
  padding: 10rpx;
  margin-top: 20rpx;
}

.likes-wrap::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: 26rpx;
  width: 20rpx;
  height: 20rpx;
  background: inherit;
  transform: rotate(45deg);
}

.likes-wrap text {
  padding: 10rpx;
}

.input-wrap {
  display: none;
}

.input-wrap.input-show {
  display: block;
}

.input-wrap input {
  width: 700rpx;
  margin: 10rpx auto;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  text-align: center;
  padding: 10rpx;
}
