@import '/style/iconfont.wxss';

.wrap {
  padding: 10rpx;
}

.calen-header {
  display: flex;
  align-items: flex-end;
  height: 312rpx;
  margin-bottom: 10rpx;
}

.left {
  width: 312rpx;
}

.left image {
  width: 100%;
}

.right {
  flex: 1;
}

.month-box, .year-box {
  display: flex;
  align-items: center;
}

.icon {
  padding: 10rpx;
  color: #aaa;
}

.month {
  font-size: 1.4rem;
}

.year {
  margin-top: 10rpx;
  font-size: 2rem;
}

.week {
  display: flex;
  justify-content: center;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}

.week view {
  width: 104rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #999;
}

.day {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.day view {
  width: 104rpx;
  height: 104rpx;
  line-height: 104rpx;
  text-align: center;
  background: #ddd;
  border: 2rpx solid #fff;
  border-radius: 20rpx;
}

.day .current-day {
  color: #fff;
  background: #e80000;
  font-size: 1.2rem;
}

.day view.positive {
  background: transparent;
  border-color: transparent;
  color: transparent;
  pointer-events: none;
}
