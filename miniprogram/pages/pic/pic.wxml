<view class='wrap'>
  <view class='img-box' wx:for='{{imgs}}' wx:key='this'>
    <view class="desc">
      <view>{{index+1}}. {{item.desc}}</view>
      <view>{{item.time}}</view>
    </view>
    <image src="{{item.fileID}}" mode="widthFix" bindtap="preImg" data-img="{{item.fileID}}"></image>
  </view>
  <view class="done" wx:if='{{isDone}}'>到底啦,请松手!</view>
  <view class="to-top {{showToTop?'animate':'animate-reverse'}}" bindtap="onTop"></view>
</view>