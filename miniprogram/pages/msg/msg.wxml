<view>
  <view class='form-wrap'>
    <button class='form-btn' open-type='contact'>联系客服</button>
    <button class='form-btn' bindtap='makeCall'>拨打13707735481</button>
  </view>
  <view class='form-wrap'>
    <view class='form-txt'>内容(还可以输入
      <text class='form-em-txt'>{{len}}</text> 个字)
    </view>
    <textarea class='form-ta' placeholder="留下您宝贵的意见吧" maxlength='60' bindinput='onMsgInput' placeholder-style='color:#aaa' />
  </view>
  <view class='form-wrap'>
    <button class='form-btn' bindtap="onSubmit">提交</button>
  </view>
  <view class='wave'>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
    <view class='wave-item'></view>
  </view>
  <view class='sub-tips'>(历史留言仅显示最近20条记录)</view>

  <block wx:for='{{records}}' wx:key=''>
    <view class='item-wrap'>
      <view class='item'>
        <view class='user-info' style="background-image: url({{item.userInfo.avatarUrl}})">
        </view>
        <view class='user-msg'>
          <view class='nick-name' wx:if='{{item.userInfo.nickName}}'>{{item.userInfo.nickName}}</view>
          <view class='nick-name' wx:else>无名氏</view>
          <view class='msg-wrap'>
            <view class="msg">{{item.msg}}</view>
          </view>
        </view>
      </view>
      <view class='like' bindtap="onLike" data-idx='{{index}}' data-id='{{item._id}}'>
        <view>{{item.like}}</view>
        <text wx:if='{{item.like>0}}' class='iconfont iconintegral_fill'></text>
        <text wx:else class='iconfont iconintegral'></text>
      </view>
      <view class='tips'>
        <view class="time">{{item.time}} 发布于 {{item.city?item.city:"火星"}}</view>

        <view class='comment'>
          <view class='options {{index==curIndex && !isComment?"cur":""}}'>
            <view bindtap="likes" data-idx='{{index}}' data-id='{{item._id}}' data-likes="{{item.likes}}">
              <text class='iconfont iconganxingqu'></text>
              <text wx:if='{{isLike}}'> 取消</text>
              <text wx:else> 点赞</text>
            </view>
            <view bindtap="res" data-idx='{{index}}' data-comment_id='{{item._id}}'>
              <text class='iconfont iconliuyan'></text> 评论</view>
          </view>
          <view class='btn' bindtap="showOptions" data-idx='{{index}}' data-likes="{{item.likes}}">
            <view></view>
            <view></view>
          </view>
        </view>

      </view>

      <view class='input-wrap {{isComment && (index==curIndex)?"input-show":""}}' data-idx='{{index}}'>
        <input focus="{{isComment && (index==curIndex)?true:false}}"></input>
      </view>

      <view class='likes-wrap' wx:if='{{item.likes.length>0}}'>
        <text class='iconfont iconxin'></text>
        <text wx:for='{{item.likes}}' wx:key='like' wx:for-item='like'>{{like}}</text>
      </view>
      <view class='del' wx:if='{{isSelf}}' bindtap="onDel" data-id='{{item._id}}'>
        <view class='del-txt'>del</view>
      </view>
    </view>
  </block>

</view>