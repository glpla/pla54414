.form-wrap {
  padding: 10rpx;
}

.form-txt {
  padding: 10rpx;
}

.form-em-txt {
  color: #f40;
}

.form-input {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 20rpx;
  font-size: 0.8rem;
  border-radius: 10rpx;
}

.form-ta {
  width: 100%;
  line-height: 40rpx;
  background: #fff;
  padding: 20rpx;
  font-size: 0.8rem;
  border-radius: 10rpx;
}

.form-btn {
  background: #179cd1;
  color: #fff;
  margin-top: 10rpx;
  font-size: 0.8rem;
  border-radius: 10rpx;
}

.wrap-history {
  position: relative;
  text-align: center;
  width: 340rpx;
  line-height: 60rpx;
  margin: 20rpx auto 0;
  background: #eee;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.wrap-history::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: -30rpx;
  width: 30rpx;
  height: 30rpx;
  background: radial-gradient(farthest-corner circle at 0rpx 0px, transparent 70%, #eee 30%);
}

.wrap-history::after {
  content: "";
  position: absolute;
  bottom: 0;
  right: -30rpx;
  width: 30rpx;
  height: 30rpx;
  background: radial-gradient(farthest-corner circle at 30rpx 0px, transparent 70%, #eee 30%);
}

.item-wrap {
  padding: 0 10rpx;
}

.item {
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  background: #eee;
}

.item view {
  margin-bottom: 10rpx;
}

.item .cont-box {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.item .cont-box:first-child {
  margin-top: 50rpx;
}

.item .cont-box .head {
  color: #aaa;
  flex: 1;
}

.item .cont-box .cont {
  flex: 5;
}

.item .sub-title {
  color: #aaa;
}

.item .like {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  align-items: center;
}

.item .like text {
  color: #f66;
  font-size: 50rpx;
}

.item .sn-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 0;
  /* border-radius: 10rpx; */
  border-top: 30rpx solid rgb(60, 219, 240);
  border-left: 60rpx solid rgb(60, 219, 240);
  border-right: 0rpx solid transparent;
  border-bottom: 30rpx solid transparent;
}

.item .sn-title {
  position: absolute;
  left: 0;
  top: 0;
  padding: 0rpx 10rpx;
  color: #fff;
}
