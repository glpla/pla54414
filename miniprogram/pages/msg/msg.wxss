.item-wrap {
  padding: 0 10rpx;
}

.wave {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wave-item {
  width: 6rpx;
  height: 60rpx;
  background: #ddd;
  margin: 0 4rpx;
  transform-origin: bottom;
  animation: wave 2s ease-in-out infinite;
}

@keyframes wave {
  0% {
    background: #ddd;
    transform: scaleY(0);
  }

  50% {
    background: #333;
    transform: scaleY(1);
  }

  100% {
    background: transparent;
    transform: scaleY(0);
  }
}

.wave-item:nth-child(1) {
  animation-delay: 0.1s;
}

.wave-item:nth-child(2) {
  animation-delay: 0.2s;
}

.wave-item:nth-child(3) {
  animation-delay: 0.3s;
}

.wave-item:nth-child(4) {
  animation-delay: 0.4s;
}

.wave-item:nth-child(5) {
  animation-delay: 0.5s;
}

.wave-item:nth-child(6) {
  animation-delay: 0.6s;
}

.wave-item:nth-child(7) {
  animation-delay: 0.7s;
}

.wave-item:nth-child(8) {
  animation-delay: 0.8s;
}

.wave-item:nth-child(9) {
  animation-delay: 0.9s;
}

.wave-item:nth-child(10) {
  animation-delay: 1s;
}

.wave-item:nth-child(11) {
  animation-delay: 1.1s;
}

.wave-item:nth-child(12) {
  animation-delay: 1.2s;
}

.wave-item:nth-child(13) {
  animation-delay: 1.3s;
}

.wave-item:nth-child(14) {
  animation-delay: 1.4s;
}

.wave-item:nth-child(15) {
  animation-delay: 1.5s;
}

.wave-item:nth-child(16) {
  animation-delay: 1.6s;
}

.tips {
  font-size: 0.6rem;
  text-align: center;
  padding: 20rpx;
  color: #aaa;
  border-bottom: 1px solid #ddd;
}

.item {
  position: relative;
  margin-top: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx;
}

.item .user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item .user-info .img {
  border-radius: 50%;
  width: 100rpx;
}

.item .user-info .nickName {
  width: 200rpx;
  color: #aaa;
  text-align: center;
  margin-top: 20rpx;
}

.item .user-msg {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item .user-msg .msg {
  font-size: 0.8rem;
}

.item .user-msg .time {
  font-size: 0.6rem;
  color: #aaa;
  margin-bottom: 20rpx;
}

.item .user-like {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
}

.item .user-like text {
  color: #f66;
  font-size: 0.6rem;
}
