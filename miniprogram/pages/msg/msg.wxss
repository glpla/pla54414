.item-wrap {
  padding: 0 10rpx;
}

.wave {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wave-item {
  width: 6rpx;
  height: 60rpx;
  background: #ddd;
  margin: 0 4rpx;
  transform-origin: bottom;
  animation: wave 2s ease-in-out infinite;
}

@keyframes wave {
  0% {
    background: #ddd;
    transform: scaleY(0);
  }

  50% {
    background: #333;
    transform: scaleY(1);
  }

  100% {
    background: transparent;
    transform: scaleY(0);
  }
}

.wave-item:nth-child(1) {
  animation-delay: 0.1s;
}

.wave-item:nth-child(2) {
  animation-delay: 0.2s;
}

.wave-item:nth-child(3) {
  animation-delay: 0.3s;
}

.wave-item:nth-child(4) {
  animation-delay: 0.4s;
}

.wave-item:nth-child(5) {
  animation-delay: 0.5s;
}

.wave-item:nth-child(6) {
  animation-delay: 0.6s;
}

.wave-item:nth-child(7) {
  animation-delay: 0.7s;
}

.wave-item:nth-child(8) {
  animation-delay: 0.8s;
}

.wave-item:nth-child(9) {
  animation-delay: 0.9s;
}

.wave-item:nth-child(10) {
  animation-delay: 1s;
}

.wave-item:nth-child(11) {
  animation-delay: 1.1s;
}

.wave-item:nth-child(12) {
  animation-delay: 1.2s;
}

.wave-item:nth-child(13) {
  animation-delay: 1.3s;
}

.wave-item:nth-child(14) {
  animation-delay: 1.4s;
}

.wave-item:nth-child(15) {
  animation-delay: 1.5s;
}

.wave-item:nth-child(16) {
  animation-delay: 1.6s;
}

.tips {
  font-size: 0.6rem;
  text-align: center;
  padding: 20rpx;
}

.item {
  position: relative;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background: #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10rpx;
  overflow: hidden;
}

.item .user-info {
  width: 100rpx;
  height: 100rpx;
  background-color: #aaa;
  background-size: cover;
  border-radius: 50%;
  margin: 20rpx;
}

.item .user-msg {
  margin: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item .user-msg .nick-name {
  font-size: 0.8rem;
}

.item .user-msg .time {
  font-size: 0.6rem;
}

.item .user-msg .msg {
  margin-top: 10rpx;
  font-size: 0.8rem;
  color: #999;
}

.item .user-like {
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  display: flex;
  align-items: center;
}

.item .user-like view {
  color: #f40;
  font-size: 0.68rem;
}

.item .user-like text {
  color: #f40;
  font-size: 1.4rem;
}

.item .del {
  position: absolute;
  left: -40rpx;
  top: -40rpx;
  width: 0rpx;
  height: 0rpx;
  border-top: 20px solid #f40;
  border-right: 20px solid transparent;
  border-bottom: 20px solid transparent;
  border-left: 20px solid transparent;
  transform: rotate(135deg);
  z-index: 1;
}

.item .del-txt {
  position: absolute;
  top: -43rpx;
  left: -12rpx;
  color: #fff;
  font-size: 0.6rem;
  transform: rotate(180deg);
  z-index: 99;
}
