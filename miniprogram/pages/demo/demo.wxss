.scroll {
  height: 6vh;
  line-height: 6vh;
  display: flex;
  white-space: nowrap;
  background: #f6f6f6;
}

.scroll-item {
  height: 100%;
  text-transform: uppercase;
  display: inline-block;
  padding: 0rpx 20rpx;
}

.cur {
  border-bottom: 6rpx solid #ed786a;
}

swiper {
  width: 100%;
  height: 90vh;
  margin-top: 1vh;
  border-radius: 20rpx;
  overflow: hidden;
}

swiper-item {
  background: rgba(237, 120, 106, 0.2);
  text-align: center;
  padding: 10rpx;
}
