.wrap {
  position: relative;
  width: 720rpx;
  height: 600rpx;
  top: 0rpx;
  margin: 200rpx auto 0rpx;
  transition: 0.5s ease-in-out;
}

.wrap-active {
  margin-top: 460rpx;
}

.after, .before {
  position: absolute;
  width: 100%;
  left: 0rpx;
  bottom: 0rpx;
}

.after {
  bottom: 165rpx;
}

.before {
  z-index: 99;
}

.form {
  position: absolute;
  top: 285rpx;
  left: 50%;
  width: 640rpx;
  height: 160rpx;
  background: #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  transform: translateX(-50%);
  overflow: hidden;
  transition: 0.5s ease-in-out;
}

.form-active {
  top: -440rpx;
  height: 900rpx;
}

.header {
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  font-size: 1.2rem;
  color: #6eb5d8;
}

.label {
  height: 60rpx;
  line-height: 60rpx;
}

input, textarea {
  width: 100%;
  height: 60rpx;
  font-size: 1rem;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #fff;
  background-color: #fff;
}

textarea {
  height: 140rpx;
  padding-top: 10rpx;
}

.btn {
  color: #fff;
  background: #6eb5d8;
  margin: 20rpx auto 0;
  font-size: 1rem;
}

.check {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

.check button {
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  outline: none;
  border: none;
  border-radius: 50%;
  box-shadow: 0 0 10rpx #4f8ead;
}
