.header-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #cf4289;
  text-shadow: 0 0 10rpx #cf4289;
}

.user-box {
  width: 160rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user {
  width: 60rpx;
  height: 60rpx;
  background-size: cover;
  background-position: center;
}

.search {
  flex: 1;
}

.search input {
  width: 100%;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 60rpx;
  font-size: 0.8rem;
  color: #aaa;
}

.search .focus {
  /* box-shadow: 0 0 4rpx #cf4289; */
  border-color: #cf4289;
}

.greeting {
  height: 60rpx;
  line-height: 60rpx;
  border-top: 2rpx solid #cf4289;
  border-bottom: 2rpx solid #cf4289;
  text-align: center;
  margin-top: 10rpx;
}

.good-wrap {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

wine-item {
  width: 48%;
}
