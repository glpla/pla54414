page {
  width: 100%;
  height: 100%;
}

.wine-wrap {
  width: 100%;
  height: 100%;
  perspective: 800;
}

.wrap {
  position: relative;
  width: 164rpx;
  height: 164rpx;
  margin: 80rpx auto 0;
  /* border:2rpx solid #f40; */
  perspective: 1200rpx;
  transform-style: preserve-3d;
  transform-origin: 0% 0%;
  transform: rotateX(-14deg);
  /* animation: circle 20s linear infinite; *//* animation-delay: 1.6s; */
}

@keyframes circle {
  0% {
    transform: rotateX(-10deg) rotateY(0deg);
  }

  100% {
    transform: rotateX(-10deg) rotateY(360deg);
  }
}

.item {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  color: #fff;
  transform-style: preserve-3d;
  -webkit-box-reflect: below 10px -webkit-gradient(linear, left top, left bottom, from(transparent), to(rgba(255, 255, 255, 0.6)));
  transform: scale(0.6);
}

.item image {
  width: 100%;
}

.item:nth-child(1) {
  animation: move0 0.4s ease-in-out forwards;
}

.item:nth-child(2) {
  animation: move1 0.4s ease-in-out 0.1s forwards;
}

.item:nth-child(3) {
  animation: move2 0.4s ease-in-out 0.2s forwards;
}

.item:nth-child(4) {
  animation: move3 0.4s ease-in-out 0.3s forwards;
}

.item:nth-child(5) {
  animation: move4 0.4s ease-in-out 0.4s forwards;
}

.item:nth-child(6) {
  animation: move5 0.4s ease-in-out 0.5s forwards;
}

.item:nth-child(7) {
  animation: move6 0.4s ease-in-out 0.6s forwards;
}

.item:nth-child(8) {
  animation: move7 0.4s ease-in-out 0.7s forwards;
}

.item:nth-child(9) {
  animation: move8 0.4s ease-in-out 0.8s forwards;
}

.item:nth-child(10) {
  animation: move9 0.4s ease-in-out 1s forwards;
}

@keyframes move0 {
  100% {
    transform: rotateY(20deg) translateZ(320rpx) scale(1);
  }
}

