<view class="">
  <wine-swiper imgs='{{imgs}}'></wine-swiper>
  <view class="greeting">喜欢Ta就带Ta回家吧</view>
  <view class="product-wrap">
    <view class="product" wx:for='{{product}}' wx:key='_id' data-idx="{{item._id}}" bindtap="onDetail">
      <image src='{{item.url}}' mode="widthFix"></image>
      <view class="desc">{{item.desc}}</view>
      <view class="price">¥{{item.price}}</view>
    </view>
  </view>
  <view class="done" wx:if='isDone'>没有更多宝贝了</view>
  <to-top color='#FF69B4' show='{{showToTop}}'></to-top>
</view>