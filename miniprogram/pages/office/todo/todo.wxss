.wrap {
  padding: 10rpx;
  font-size: 1rem;
}

.title {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #ddd;
  font-size: 1.2rem;
  text-align: center;
}

.res-box {
  border-radius: 10rpx;
  border: 2rpx solid #00BFFF;
  margin-top: 20rpx;
}

.res-title {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  color: #fff;
  background: #00BFFF;
}

.time {
  display: flex;
  justify-content: space-between;
}

.staff {
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  font-size: 0.8rem;
  color: #aaa;
}

.res-cont {
  padding: 20rpx;
  line-height: 60rpx;
  color: #333;
}

button {
  margin-top: 20rpx;
  width: 100%;
  background: #00BFFF;
  color: #fff;
  font-size: 1rem;
}
