page {
  background: #dcdcdc;
}

swiper {
  height: 562.5rpx;
}

swiper-item {
  height: 562.5rpx;
}

image {
  width: 100%;
  height: 100%;
}

.wrap {
  background: #fff;
  padding: 10rpx;
}

.tips {
  margin-top: 20rpx;
}

.tips text {
  font-weight: bold;
  color: rgb(53, 189, 207);
}

.info-box {
  width: 100%;
  display: flex;
  align-items: center;
}

.info-box view {
  flex: 1;
}

.title {
  font-size: 0.8rem;
  padding: 10rpx;
}

.sub-title {
  text-indent: 1rem;
}

.item-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  margin: 40rpx auto;
  padding: 20rpx;
}

.item-wrap .left {
  width: 180rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #aaa;
}

.left .text {
  font-size: 3rem;
  text-shadow: 0 4rpx 2rpx #666;
}

.left .item-title {
  font-size: 0.8rem;
  margin-top: 10rpx;
}

.item-wrap .right {
  padding-left: 8rpx;
  text-align: left;
  flex: 1;
}

.btn-wrap {
  width: 100%;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #f6f6f6;
}

.btn {
  background: #179cd1;
  color: #fff;
  font-size: 0.8rem;
}

.skill {
  width: 100%;
  border: 1px solid #fac25a;
}

.skill view {
  text-indent: 20rpx;
  color: #fff;
  background: #ffa500;
}

.per95 {
  width: 95%;
}

.per80 {
  width: 80%;
}

.per70 {
  width: 70%;
}

.per60 {
  width: 60%;
}

.per50 {
  width: 50%;
}

.per40 {
  width: 40%;
}

.per30 {
  width: 30%;
}

.bottom-tips {
  margin: 20rpx 0 140rpx;
  text-align: center;
  font-size: 0.6rem;
  color: #999;
}

.music {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  background: rgba(255, 255, 255, 0.4);
  z-index: 99;
}

.rolling {
  animation: rolling 4s linear infinite;
}

@keyframes rolling {
  to {
    transform: rotate(360deg);
  }
}
