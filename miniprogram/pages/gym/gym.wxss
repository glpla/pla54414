.quiz-box {
  width: 100%;
  height: 390rpx;
  border-bottom: 2rpx solid #ddd;
  padding: 80rpx 10rpx 0;
  position: relative;
}

.item-box {
  width: 100%;
  margin: 20rpx auto;
}

.item-cont {
  margin: 20rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #ddd;
  text-align: center;
}

.item-option {
  margin: 20rpx 80rpx;
}

.item-res {
  font-size: 0.8rem;
  text-align: center;
}

.item-option view {
  margin: 20rpx 0;
}

.title {
  margin-top: 150rpx;
  text-align: center;
  font-size: 1.2em;
}

.btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -80rpx;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8rem;
  border-radius: 60rpx;
  border: 2rpx solid #6495ed;
  box-shadow: 0 0 20rpx #6495ed;
}

.option-btn-box {
  width: 100%;
  display: flex;
  justify-content: center;
}

.option-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  box-shadow: 0 0 20rpx #6495ed;
  border-radius: 50%;
  margin: 20rpx 10rpx;
}

.option-btn text {
  font-size: 1.6rem;
  color: #aaa;
}

.cur-btn {
  box-shadow: 0 0 20rpx #f40;
}
