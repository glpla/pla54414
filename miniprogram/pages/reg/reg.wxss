page {
  background: #179cd1;
  color: #f6f6f6;
}

.ph {
  color: #ddd;
  font-size: 0.8rem;
}

.reg-wrap {
  width: 60%;
  margin: 120rpx auto;
}

.input-wrap {
  margin-top: 20rpx;
}

input {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border: 2rpx solid #fff;
  border-radius: 60rpx;
  margin-top: 10rpx;
  text-align: center;
}

.desc {
  text-align: center;
  font-size: 0.8rem;
}

.img {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  margin: 20rpx auto;
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  font-size: 1rem;
  border-radius: 50%;
  text-align: center;
  background-size: cover;
  overflow: hidden;
  box-shadow: 0 0 40rpx #fff;
}

image {
  width: 100%;
  height: 100%;
}

.reg-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #ff0;
  border-radius: 60rpx;
  text-align: center;
  color: #666;
}
