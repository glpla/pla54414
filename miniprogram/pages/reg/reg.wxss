page {
  background: #179cd1;
  color: #f6f6f6;
}

.ph {
  color: #ddd;
  font-size: 0.8rem;
}

.reg-wrap {
  width: 60%;
  margin: 200rpx auto;
}

.input-wrap {
  margin-top: 20rpx;
}

input {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border: 2rpx solid #fff;
  border-radius: 60rpx;
  margin-top: 10rpx;
  text-align: center;
}

.reg-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #ff0;
  border-radius: 60rpx;
  text-align: center;
  color: #666;
}
