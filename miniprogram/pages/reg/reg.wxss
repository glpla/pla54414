.reg-wrap {
  width: 600rpx;
  margin: 40rpx auto;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  margin: 20rpx auto 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  text-align: center;
  background-size: cover;
  box-shadow: 0 0 40rpx #fd70b7;
}

.name {
  text-align: center;
  margin: 20rpx auto;
  font-size: 1.2rem;
}

.input-wrap {
  margin-top: 20rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 60rpx;
  display: flex;
  overflow: hidden;
}

.desc {
  position: relative;
  z-index: 2;
  left: 50%;
  margin-left: -60rpx;
  background: #fd70b7;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  transition: all 0.2s linear;
}

.focus {
  left: 0rpx;
  margin-left: 0;
}

.desc text {
  font-size: 1.2rem;
  color: #fff;
}

.input {
  flex: 1;
  height: 60rpx;
  padding: 0 30rpx;
  opacity: 0;
}

.show {
  opacity: 1;
}

.reg-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #cf4289;
  border-radius: 60rpx;
  text-align: center;
  color: #fff;
}
