.section {
  width: 100%;
  margin-top: 20rpx;
}

.info-box {
  background: #fff;
  border-bottom: 1px solid #ddd;
  margin-bottom: 20rpx;
}

.info-time {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx;
}

.info-msg {
  font-size: 32rpx;
  padding: 10rpx;
}

.info-img {
  display: flex;
  flex-wrap: wrap;
}

.info-img .img-box {
  width: 240rpx;
  height: 240rpx;
  padding: 10rpx;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
