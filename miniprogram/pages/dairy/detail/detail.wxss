.info-box {
  width: 710rpx;
  margin: 20rpx auto;
  /* box-shadow: 0 10rpx 10rpx #c7c7c7; */
  border: 2rpx solid #179cd1;
  border-radius: 20rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}

.info-time {
  font-size: 0.8rem;
  color: #aaa;
  padding: 10rpx;
  border-bottom: 2rpx solid rgba(23, 156, 209, 0.4);
}

.info-msg {
  padding: 10rpx;
}

.info-img {
  display: flex;
  flex-wrap: wrap;
}

.img-box {
  width: 240rpx;
  padding: 10rpx;
}

.img-box image {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
}

.done {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8rem;
}
