.info-box {
  margin-top: 20rpx;
  box-shadow: 0 10rpx 10rpx #c7c7c7;
}

.info-time {
  font-size: 0.8rem;
  color: #aaa;
  padding: 0 10rpx;
}

.info-msg {
  padding: 10rpx;
}

.info-img {
  display: flex;
  flex-wrap: wrap;
}

.img-box {
  width: 240rpx;
  padding: 10rpx;
}

.img-box image {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
}

.done {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8rem;
}
