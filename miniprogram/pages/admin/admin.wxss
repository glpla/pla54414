.login-wrap {
  width: 100%;
  margin: 400rpx auto;
}

.input-phc {
  color: #7fb021;
}

input {
  height: 60rpx;
  line-height: 60rpx;
  color: #7fb021;
  text-align: center;
  font-size: 1rem;
  border-bottom: 2rpx solid #7fb021;
}

button {
  margin-top: 40rpx;
  font-size: 1rem;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #7fb021;
}

.admin-wrap {
  width: 100%;
  margin-top: 10rpx;
}

.admin-wrap .btn {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #aaa;
  border-radius: 10rpx;
  text-align: center;
  color: #7fb021;
}

.admin-wrap .img {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 20rpx;
}
